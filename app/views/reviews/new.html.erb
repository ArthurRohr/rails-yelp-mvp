<h1>New review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary my-3" %>
<% end %>

<%= link_to "Back to the restaurant", restaurant_path(@restaurant), class: "text-decoration-none" %>
